<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <style>
    /* Reset CSS */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
    }

    /* Navbar Styles */
    nav {
      background-color: #333;
      color: #fff;
      padding: 15px 0;
    }

    nav ul {
      list-style: none;
      text-align: center;
    }

    nav ul li {
      display: inline;
      margin: 0 10px;
    }

    nav ul li a {
      color: #fff;
      text-decoration: none;
      padding: 10px 20px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    nav ul li a:hover {
      background-color: #555;
    }

    /* Container Styles */
    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .message {
      text-align: center;
      margin-top: 20px;
      color: #666;
    }

    /* Room Availability Styles */
    .availability-section {
      margin-top: 30px;
    }

    .availability-section h2 {
      margin-bottom: 10px;
      color: #333;
    }

    .availability-section ul {
      list-style: none;
      margin-left: 20px;
    }

    .availability-section li {
      margin-bottom: 5px;
    }

    /* Meeting Rooms Styles */
    .room-list {
      margin-top: 30px;
    }

    .room-list h2 {
      margin-bottom: 10px;
      color: #333;
    }

    .room-list table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .room-list th, .room-list td {
      padding: 10px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }

    .room-list th {
      background-color: #f2f2f2;
      color: #333;
    }

    .room-list tr:hover {
      background-color: #f5f5f5;
    }

    .btn {
      background-color: #007bff;
      color: #fff;
      padding: 8px 20px;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/createroom">Add Room</a></li>
      <li><a href="/reservation">Add Reservation</a></li>
      <% if (isAuthenticated) { %>
        <li>
          <form action="/auth/logout" method="post">
            <button type="submit" class="btn">Logout</button>
          </form>
        </li>
      <% } else { %>
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
      <% } %>
    </ul>
  </nav>

  <!-- Dashboard Content -->
  <div class="container">
    <h1>Welcome to the Dashboard</h1>
    <% if (isAuthenticated) { %>
      <p class="message">You are logged in!</p>
    <% } else { %>
      <p class="message">Please login or register to access the dashboard.</p>
    <% } %>
  
    <!-- Room Availability Section -->
    <div class="availability-section">
      <h2>Room Availability</h2>
      <% Object.entries(availability).forEach(([roomId, dates]) => { %>
        <h3>Salle <%= roomId %></h3>
        <ul>
          <% dates.forEach(date => { %>
            <li><%= new Date(date.startDate).toLocaleDateString('fr-FR', {day: 'numeric', month: 'long', year: 'numeric'}) %> - <%= new Date(date.endDate).toLocaleDateString('fr-FR', {day: 'numeric', month: 'long', year: 'numeric'}) %></li>
          <% }); %>
        </ul>
      <% }); %>
    </div>
  
    <!-- Meeting Rooms Section -->
    <div class="room-list">
      <h2>Meeting Rooms</h2>
      <% if (meetingRooms && meetingRooms.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Capacity</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% meetingRooms.forEach(room => { %>
              <tr>
                <td><%= room.name %></td>
                <td><%= room.capacity %></td>
                <td>
                  <a class="btn" href="editroom/<%= room._id %>">Edit</a>
                  <a class="btn" href="#" onclick="confirmDelete('<%= room._id %>')">Delete</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No meeting rooms found.</p>
      <% } %>
    </div>
  </div>

  <script>
    function confirmDelete(roomId) {
      if (confirm('Are you sure you want to delete this room?')) {
        window.location.href = '/rooms/delete/' + roomId;
      }
    }
  </script>
</body>
</html>
